{
  "servers": [
    {
      "url": "http://localhost:{port}/{basePath}",
      "description": "The location of the local test server.",
      "variables": {
        "port": {
          "default": "3002"
        },
        "basePath": {
          "default": "api"
        }
      }
    }
  ],
  "paths": {
    "/shapes": {
      "get": {
        "operationId": "getShapes",
        "description": "Return some shape options.",
        "responses": {
          "200": {
            "description": "We have shape options!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShapeOptions"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createShape",
        "description": "Create a new shape.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ShapeOptionsPost"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Shape created successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShapeOptions"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ShapeOptions": {
        "type": "object",
        "description": "Options for a shape.",
        "oneOf": [
          {
            "$ref": "#/components/schemas/SquareShapeOptions"
          },
          {
            "$ref": "#/components/schemas/RoundShapeOptions"
          },
          {
            "$ref": "#/components/schemas/DotShapeOptions"
          }
        ],
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "square": "#/components/schemas/SquareShapeOptions",
            "round": "#/components/schemas/RoundShapeOptions",
            "dot": "#/components/schemas/DotShapeOptions"
          }
        }
      },
      "ShapeOptionsPost": {
        "type": "object",
        "description": "Options for a shape.",
        "oneOf": [
          {
            "$ref": "#/components/schemas/SquareShapeOptionsPost"
          },
          {
            "$ref": "#/components/schemas/RoundShapeOptionsPost"
          },
          {
            "$ref": "#/components/schemas/DotShapeOptionsPost"
          }
        ],
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "square": "#/components/schemas/SquareShapeOptionsPost",
            "round": "#/components/schemas/RoundShapeOptionsPost",
            "dot": "#/components/schemas/DotShapeOptionsPost"
          }
        }
      },
      "RoundShapeOptions": {
        "type": "object",
        "required": ["radius", "type"],
        "properties": {
          "radius": {
            "type": "number"
          },
          "type": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RoundShapeOptionsPost": {
        "type": "object",
        "required": ["radius", "type"],
        "properties": {
          "radius": {
            "type": "number"
          },
          "type": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "SquareShapeOptions": {
        "type": "object",
        "required": ["height", "type", "width"],
        "properties": {
          "height": {
            "type": "number"
          },
          "type": {
            "type": "string"
          },
          "width": {
            "type": "number"
          }
        },
        "additionalProperties": false
      },
      "DotShapeOptions": {
        "type": "object",
        "required": ["type", "radius"],
        "properties": {
          "type": {
            "type": "string"
          },
          "radius": {
            "type": "number"
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          }
        },
        "additionalProperties": false
      },
      "SquareShapeOptionsPost": {
        "type": "object",
        "required": ["height", "type", "width"],
        "properties": {
          "height": {
            "type": "number"
          },
          "type": {
            "type": "string"
          },
          "width": {
            "type": "number"
          }
        },
        "additionalProperties": false
      },
      "DotShapeOptionsPost": {
        "type": "object",
        "required": ["type", "radius"],
        "properties": {
          "type": {
            "type": "string"
          },
          "radius": {
            "type": "number"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "info": {
    "title": "Example OpenAPI definition",
    "version": "1.0.0"
  },
  "openapi": "3.0.0"
}
